<% if(success && success.length) { %>
  <div class="alert alert-success alert-dismissible fade show col-10 col-sm-8 col-md-6 offset-1 offset-sm-2 offset-md-3" role="alert">
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<% if(failure && failure.length) { %>
  <div class="alert alert-danger alert-dismissible fade show col-10 col-sm-8 col-md-6 offset-1 offset-sm-2 offset-md-3" role="alert">
    <%= failure %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<% if(error && error.length) { %>
  <div class="alert alert-danger alert-dismissible fade show col-10 col-sm-8 col-md-6 offset-1 offset-sm-2 offset-md-3" role="alert">
    <%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>
