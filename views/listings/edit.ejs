<%- layout('layouts/boilerplate') -%>

<div class="row mt-2 mb-5">
  <div class="col-7">
    <h2 class="text-center mt-5" style="color: violet;">Edit the Listing</h2>
    <form method="post" action="/listings/<%= listings._id %>?_method=PUT" novalidate class="needs-validation"  enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" value="<%= listings.title %>" class="form-control" required />
        <div class="invalid-feedback">Please choose Title</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" class="form-control" required><%= listings.description %></textarea>
        <div class="invalid-feedback">Please choose Description</div>
      </div>

      <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input type="number" name="listing[price]" value="<%= listings.price %>" class="form-control" required />
        <div class="invalid-feedback">Please choose Price</div>
      </div>
<div class="mb-3">
<img src="<%= originalImage %>" />        
</div>

      <div class="mb-3">
        <label for="image" class="form-label">Upload Listing Image</label>
            <input type="file"  name="listing[image]" class="form-control" /> </div>

      <div class="row">
        <div class="col mb-3">
          <label for="location" class="form-label">Location</label>
          <input name="listing[location]" value="<%= listings.location %>" class="form-control" required />
          <div class="invalid-feedback">Please choose Location</div>
        </div>

        <div class="col mb-3">
          <label for="country" class="form-label">Country</label>
          <input name="listing[country]" value="<%= listings.country %>" class="form-control" />
          <div class="invalid-feedback">Please choose Country</div>
        </div>
      </div>

      <button class="mt-3 btn btn-outline-primary">Submit</button>
    </form>
  </div>
</div>
